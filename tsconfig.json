{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true // Ensure this is enabled
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }